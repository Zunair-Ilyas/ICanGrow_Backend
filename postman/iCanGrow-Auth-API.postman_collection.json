                    "",
                    "// Check for common error patterns",
                    "if (pm.response.code === 401) {",
                    "    console.log('ðŸ”’ Unauthorized - Token may be expired or invalid');",
                    "    console.log('ðŸ’¡ Try running \"Refresh Token\" request manually');",
                    "} else if (pm.response.code === 403) {",
                    "    console.log('ðŸš« Forbidden - Insufficient permissions');",
                    "} else if (pm.response.code >= 400) {",
                    "    console.log('âŒ Error response received');",
                    "    try {",
                    "        const errorResponse = pm.response.json();",
                    "        if (errorResponse.error) {",
                    "            console.log('Error:', errorResponse.error);",
                    "        }",
                    "    } catch (e) {",
                    "        console.log('Could not parse error response');",
                    "    }",
                    "} else if (pm.response.code >= 200 && pm.response.code < 300) {",
                    "    console.log('âœ… Request successful');",
                    "}"
                ]
            }
